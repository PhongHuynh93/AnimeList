<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="requestManager"
            type="com.bumptech.glide.RequestManager" />

        <variable
            name="vm"
            type="com.wind.myanimelist.home.AnimeViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/default_radius"
        app:cardElevation="16dp"
        tools:background="@android:color/white"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:image="@{vm.anime.imageUrl}"
            app:requestManager="@{requestManager}"
            app:shapeAppearance="@style/RoundView"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_black_gradient" />

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/space_normal"
            android:layout_marginBottom="@dimen/space_normal"
            android:ellipsize="end"
            android:maxLines="2"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@{vm.anime.title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            android:theme="@style/AppTheme.Dark"
            tools:text="@tools:sample/full_names" />
    </androidx.cardview.widget.CardView>
</layout>
